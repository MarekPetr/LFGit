<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="RepoDetailViewModel"
            type="com.lfgit.view_models.RepoDetailViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/taskResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginHorizontal="@dimen/smallMargin"
                android:text="@={RepoDetailViewModel.taskResult}">
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rightDrawer"
            android:layout_width="240sp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white">

            <ListView
                android:id="@+id/repoOperationList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0sp" >
            </ListView>
        </RelativeLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>




